<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BoH.GUI.ViewModels"
             xmlns:local="clr-namespace:BoH.GUI.Views"
             x:Class="BoH.GUI.Views.GameBoardView"
             x:DataType="vm:GameBoardViewModel">
    <Grid>
        <!-- Основная панель для игрового поля -->
        <ItemsControl ItemsSource="{Binding Cells}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <!-- Привязка каждой строки из Cells -->
                        <ItemsControl ItemsSource="{Binding}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Использование CellView для отображения каждой клетки -->
                                    <local:CellView />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
