<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BoH.GUI.ViewModels"
             xmlns:modules="using:BoH.Models"
             mc:Ignorable="d"
             x:Class="BoH.GUI.Views.CellView"
             x:DataType="vm:CellViewModel">
    
    <Button Width="80" Height="80"
            Command="{Binding HandleClick}"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Padding="0"
            FontSize="36">
        <TextBlock Text="{Binding Cell.Icon}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center" />
    </Button>
    
</UserControl>
