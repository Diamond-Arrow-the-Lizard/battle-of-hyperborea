<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BoH.GUI.ViewModels"
             x:Class="BoH.GUI.Views.CellView"
             x:DataType="vm:CellViewModel">
    <Button>
        <Button.Styles>
            <Style Selector="Button">
                <Setter Property="Background" Value="{Binding IsAccessible, Converter={StaticResource BooleanToBrushConverter}}" />
                <Setter Property="Foreground" Value="Black" />
            </Style>
        </Button.Styles>
        <Button.Content>
            <TextBlock Text="{Binding Content, Converter={StaticResource ContentToDisplayConverter}}" />
        </Button.Content>
    </Button>
</UserControl>